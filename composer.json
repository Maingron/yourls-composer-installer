{
    "name": "maingron/yourls-composer-installer",
    "description": "YOURLS' custom Composer installer for YOURLS plugins",
    "type": "composer-plugin",
    "license": "MIT",
    "homepage": "https://github.com/Maingron/yourls-composer-installer",
    "keywords": [
        "yourls",
        "yourls-plugin"
    ],
    "require": {
        "composer-plugin-api": "^2.6",
        "wikimedia/composer-merge-plugin": "^2.0"
    },
    "require-dev": {
        "composer/composer": "^2.0.13",
        "phpunit/phpunit": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "YOURLS\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YOURLS\\": "tests/"
        }
    },
    "extra": {
        "class": "YOURLS\\ComposerInstaller\\Plugin"
    },
    "config": {
        "allow-plugins": {
            "wikimedia/composer-merge-plugin": true
        }
    }
}
